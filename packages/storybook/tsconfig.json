{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
     "paths": {
      "@unisize/*": ["packages/*/src"]
    },
    "composite": true,
    "declaration": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css"]
      }
    ]
  },
  "include": [
    "@types/*",
    "src/**/*",
    "src/**/*.json",
    ".storybook/*",
  ]
}